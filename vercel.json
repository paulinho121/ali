{
    "version": 2,
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "/api/server"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "redirects": [
        {
            "source": "/api/automation/run",
            "destination": "/api/server?action=run",
            "permanent": false
        }
    ],
    "crons": [
        {
            "path": "/api/automation/run",
            "schedule": "0 12 * * *"
        }
    ]
}